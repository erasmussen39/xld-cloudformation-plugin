        <property name="connectionDrainingEnabled" required="false" category="Options" /> -->

        <!-- VPC Settings -->
        <!-- <property name="vpcId" required="false" category="VPC Settings" description="The ID for your VPC."/>
        <property name="subnets" required="false" category="VPC Settings" description="The IDs of the Auto Scaling group subnet or subnets. If you have multiple subnets, specify the value as a single comma-delimited string of subnet IDs (for example, 'subnet-11111111,subnet-22222222')."/>
        <property name="elbSubnets" required="false" category="VPC Settings" description="The IDs of the subnet or subnets for the elastic load balancer. If you have multiple subnets, specify the value as a single comma-delimited string of subnet IDs (for example, 'subnet-11111111,subnet-22222222')."/>
        <property name="elbScheme" required="false" category="VPC Settings" description="Specify 'internal' if you want to create an internal load balancer in your VPC so that your CloudFormation application cannot be accessed from outside your VPC."/>
        <property name="dbSubnets" required="false" category="VPC Settings" description="Contains the IDs of the database subnets. This is only used if you want to add an Amazon RDS DB Instance as part of your application. If you have multiple subnets, specify the value as a single comma-delimited string of subnet IDs (for example, 'subnet-11111111,subnet-22222222')."/>
        <property name="associatePublicIpAddress" required="false" category="VPC Settings" description="Specifies whether to launch instances with public IP addresses in your VPC. Instances with public IP addresses do not require a NAT device to communicate with the Internet. You must set the value to true if you want to include your load balancer and instances in a single public subnet. Valid values 'true' or 'false'."/> -->

        <!-- control tasks -->
        <method name="createStack" label="Create Stack" delegate="jythonScript" script="cf_rules/create_stack.py"/>
        <!-- <method name="describeStacks" label="Describe Stacks" delegate="jythonScript" script="cf_rules/describe_stacks.py"/> -->
        <method name="deleteStack" label="Delete Stack" delegate="jythonScript" script="cf_rules/delete_stack.py"/>
    </type>
    
    <type type="cloudformation.DeployedTemplate" extends="udm.BaseDeployedArtifact" deployable-type="cloudformation.Template" container-type="cloudformation.Stack">
        <generate-deployable type="cloudformation.Template" extends="udm.BaseDeployableArchiveArtifact" />
        <property name="targets" kind="list_of_string" required="false" description="Resources to target. Operation will be limited to these resources and their dependencies."/>
        <property name="inputVariables" kind="map_string_string" required="false" description="Input variables to be used in the CloudFormation configuration."/>
        <property name="outputVariables" kind="map_string_string" required="false" category="Output" description="Output variables captured in deployed. Key is the alias name and value is the CloudFormation output property value for a given resource."/>
        <!-- <property name="parallelism" kind="integer" required="false" default="10" description="Limit the number of parallel resource operations."/>
        <property name="boundConfigurationItems" hidden="false" kind="set_of_ci" as-containment="false" required="false" referenced-type="udm.BaseConfigurationItem"/> -->

        <method name="describeStack" label="Describe Stack" delegate="jythonScript" script="cf_rules/describe_stack.py"/>
    </type>
